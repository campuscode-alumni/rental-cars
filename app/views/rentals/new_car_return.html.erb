<% if @car.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @car, url: return_car_rental_path, method: :post do |f| %>
  <div class="form-group">
    <h3>Total: <%= number_to_currency(@calculated_amount) %></h3>
    <%= f.label :car_km, 'Quilometragem' %>
    <%= f.number_field :car_km, class: 'form-control' %>
  </div>
  <%= f.submit 'Devolver carro', class: 'btn btn-primary' %>
<% end %>